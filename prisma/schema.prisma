datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String  @id @default(cuid())
    name      String  @unique
    tzOffset  Int     @default(120)
    watches   Watch[] @relation("userWatches")
    lastWatch Watch?  @relation("lastWatch")
}

model Watch {
    id           String        @id @default(cuid())
    name         String
    user         User          @relation("userWatches", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    userId       String
    lastUser     User?         @relation("lastWatch", fields: [lastUserId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    lastUserId   String?       @unique
    measurements Measurement[]
    comment      String?

    @@unique([name, userId])
}

model Measurement {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    value     Int
    isStart   Boolean
    comment   String?
    watch     Watch    @relation(fields: [watchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    watchId   String
}
