datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client"
    runtime = "deno"
    output = "client"
}

model User {
    id        String  @id @default(cuid())
    name      String  @unique
    timeZone  String  @default("UTC")
    watches   Watch[] @relation(name: "userWatches")
    lastWatch Watch?  @relation(name: "lastWatch")
}

model Watch {
    id           String        @id @default(cuid())
    name         String
    user         User          @relation(name: "userWatches", fields: [userId], references: [id], onDelete: Cascade)
    userId       String
    lastUser     User?         @relation(name: "lastWatch", fields: [lastUserId], references: [id], onDelete: Cascade)
    lastUserId   String?       @unique
    measurements Measurement[]
    comment      String?
    image        Bytes?

    @@unique([name, userId])
}

model Measurement {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    value     Int
    isStart   Boolean  @default(false)
    comment   String?
    watch     Watch    @relation(fields: [watchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    watchId   String
}
