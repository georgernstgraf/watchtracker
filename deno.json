{
    "tasks": {
        "bastel": "deno run --inspect bastel.ts",
        "p_g": "deno -A prisma generate",
        "p_m": "deno -A prisma migrate",
        "pms": "deno -A prisma migrate status",
        "lint": "deno lint lib/*.ts middleware/*.ts routes/*.ts routers/*.ts service/*.ts repo/*.ts main.ts",
        "check": "deno check --all lib/*.ts middleware/*.ts routes/*.ts routers/*.ts service/*.ts repo/*.ts main.ts",
        "start": "deno run --env-file --allow-env --allow-read --allow-ffi --allow-net main.ts",
        "dev": "deno run --env-file --allow-env --allow-read --allow-run --allow-ffi --allow-net scripts/dev.ts",
        "watch": "deno run --env-file --allow-env --allow-read --allow-run --allow-ffi --allow-net --watch=main.ts,lib/,routes/,service/,views/,static/,prisma/schema.prisma --watch-exclude=prisma/client/ scripts/dev.ts",
        "purgecss": "purgecss --config purgecss.config.js"
    },
    "imports": {
        "@avroit/memcached": "jsr:@avroit/memcached@^0.0.4",
        "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
        "@hono/hono": "jsr:@hono/hono@^4.9.9",
        "@std/fs": "jsr:@std/fs@^1.0.19",
        "hono-sessions": "npm:hono-sessions@^0.8.0",
        "memjs": "npm:memjs@^1.3.2",
        "prisma": "npm:prisma@^6.19.2",
        "@prisma/client": "npm:@prisma/client@^6.19.2",
        "generated-prisma-client": "./prisma/client/client.ts",
        "@std/assert": "jsr:@std/assert@1",
        "hono": "jsr:@hono/hono@^4",
        "hono/cookie": "jsr:@hono/hono@^4/cookie",
        "hono/factory": "jsr:@hono/hono@^4/factory",
        "@hono/sessions": "jsr:@hono/sessions@^0.6",
        "handlebars": "npm:handlebars@^4.7.8",
        "luxon": "npm:luxon@^3.5.0",
        "moment-timezone": "npm:moment-timezone@^0.5.46",
        "ms": "npm:ms@^2.1.3",
        "uuid": "npm:uuid@^13.0.0"
    },
    "fmt": {
        "lineWidth": 150,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}