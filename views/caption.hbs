<!-- #caption.hbs -->
<caption class="caption-top text-center">
    <span id="caption-normal"
          class="d-flex justify-content-center align-items-baseline">
        {{#if watch}}
            <button title="Edit Name and Comment"
                    class="startStop btn btn-outline-light me-3"
                    onclick="captionStyle('edit')">{{watch.name}} âœï¸</button>
            {{#if watch.comment}}
                {{watch.comment}}
            {{/if}}
        {{/if}}
    </span>
    <span id="caption-edit"
          style="display: none;"
          class="justify-content-center align-items-baseline gap-3">
        <form id="patchWatch"
              hx-patch="{{appPath}}/watch/{{watch.id}}"
              hx-trigger='trigger'
              hx-target="#allButHeadAndFoot"
              hx-swap="outerHTML">
            <input type="text"
                   name="name"
                   value="{{watch.name}}">
            <input type="text"
                   name="comment"
                   {{#if watch.comment}}
                   value="{{watch.comment}}"
                   {{else}}
                   placeholder="enter comment"
                   {{/if}}>
        </form>
        <div class="btn-group">
            <button title="Remove Watch and all Records"
                    class="btn btn-outline-light startStop"
                    hx-delete="{{appPath}}/watch/{{watch.id}}"
                    hx-target="#allButHeadAndFoot"
                    hx-swap="outerHTML"> ğŸš®</button>
            <button title="cancel Edit"
                    class="btn btn-outline-light"
                    onclick="captionStyle('normal')">âŒ</button>
            <button title="Save"
                    class="btn btn-outline-light"
                    onclick="htmx.trigger('#patchWatch', 'trigger')">ğŸ’¾</button>
        </div>
    </span>
</caption>
